<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
    </padding>
    <Label fx:id="title" styleClass="label-header" text="\$name" />
    <Label fx:id="maxMarks" styleClass="label-bright" text="\$maxMarks" />
    <Separator orientation="HORIZONTAL" />
    <Label styleClass="label-bright">Summary</Label>
    <Label fx:id="average" styleClass="label-bright" />
    <Label fx:id="median" styleClass="label-bright" />
    <Label fx:id="projectedDifficulty" styleClass="label-bright" />
    <Label styleClass="label-bright">Grade Book</Label>
    <ListView fx:id="grades" VBox.vgrow="ALWAYS" />
</VBox>

